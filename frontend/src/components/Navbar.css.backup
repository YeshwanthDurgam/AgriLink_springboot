/* ================================================================
   Enhanced Navbar - Amazon/Flipkart Style
   ================================================================ */

/* ============= BASE STYLES ============= */
.navbar {
  position: sticky;
  top: 0;
  z-index: 1000;
  background: white;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

/* ============= TOP BAR ============= */
.navbar-topbar {
  background: linear-gradient(135deg, #16a34a, #22c55e);
  padding: 8px 0;
  text-align: center;
}

.topbar-content {
  color: white;
  font-size: 13px;
  font-weight: 500;
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 24px;
}

/* ============= MAIN NAVBAR ============= */
.navbar-main {
  background: #1a1a2e;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.navbar-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 24px;
  height: 64px;
  display: flex;
  align-items: center;
  gap: 16px;
}

/* ============= LEFT SECTION ============= */
.navbar-left {
  display: flex;
  align-items: center;
  gap: 16px;
  flex-shrink: 0;
}

/* Logo */
.navbar-logo {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 24px;
  font-weight: 800;
  color: white;
  text-decoration: none;
  transition: opacity 0.2s;
}

.navbar-logo:hover {
  opacity: 0.9;
}

.logo-icon {
  font-size: 28px;
}

.logo-text {
  background: linear-gradient(135deg, #22c55e, #4ade80);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Location Selector */
.location-selector {
  position: relative;
}

.location-btn {
  display: flex;
  align-items: center;
  gap: 8px;
  background: transparent;
  border: 1px solid transparent;
  padding: 8px 12px;
  border-radius: 4px;
  cursor: pointer;
  transition: all 0.2s;
}

.location-btn:hover {
  border-color: white;
}

.location-icon {
  color: white;
  font-size: 18px;
}

.location-text {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  text-align: left;
}

.location-label {
  font-size: 11px;
  color: rgba(255, 255, 255, 0.7);
}

.location-value {
  font-size: 13px;
  font-weight: 600;
  color: white;
  max-width: 120px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* Location Dropdown */
.location-dropdown {
  position: absolute;
  top: 100%;
  left: 0;
  width: 320px;
  background: white;
  border-radius: 8px;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
  padding: 20px;
  margin-top: 8px;
  z-index: 100;
}

.location-dropdown h4 {
  font-size: 16px;
  font-weight: 700;
  color: #1a1a2e;
  margin: 0 0 8px;
}

.location-dropdown > p {
  font-size: 13px;
  color: #6b7280;
  margin: 0 0 16px;
}

.location-option {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 12px;
  background: #f9fafb;
  border-radius: 6px;
  text-decoration: none;
  color: #374151;
  font-size: 14px;
  font-weight: 500;
  margin-bottom: 12px;
  transition: background 0.2s;
}

.location-option:hover {
  background: #f0fdf4;
  color: #16a34a;
}

.location-pincode {
  display: flex;
  gap: 8px;
  margin-bottom: 12px;
}

.location-pincode input {
  flex: 1;
  padding: 10px 14px;
  border: 1px solid #e5e7eb;
  border-radius: 6px;
  font-size: 14px;
  outline: none;
}

.location-pincode input:focus {
  border-color: #22c55e;
}

.location-pincode button {
  padding: 10px 20px;
  background: #22c55e;
  color: white;
  border: none;
  border-radius: 6px;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: background 0.2s;
}

.location-pincode button:hover:not(:disabled) {
  background: #16a34a;
}

.location-pincode button:disabled {
  background: #d1d5db;
  cursor: not-allowed;
}

.location-signin {
  display: block;
  text-align: center;
  color: #22c55e;
  font-size: 13px;
  font-weight: 500;
  text-decoration: none;
}

.location-signin:hover {
  text-decoration: underline;
}

/* ============= SEARCH SECTION ============= */
.navbar-search {
  flex: 1;
  max-width: 700px;
  position: relative;
}

.search-form {
  display: flex;
  border-radius: 8px;
  overflow: hidden;
  background: white;
}

/* Category Select in Search */
.search-category-select {
  position: relative;
}

.category-select-btn {
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 0 14px;
  background: #e5e7eb;
  border: none;
  font-size: 13px;
  font-weight: 500;
  color: #374151;
  cursor: pointer;
  height: 44px;
  border-right: 1px solid #d1d5db;
  transition: background 0.2s;
}

.category-select-btn:hover {
  background: #d1d5db;
}

.category-select-btn svg {
  font-size: 14px;
}

/* Category Mega Menu */
.category-mega-menu {
  position: absolute;
  top: calc(100% + 12px);
  left: 0;
  width: 400px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 15px 50px rgba(0, 0, 0, 0.2);
  z-index: 100;
  overflow: hidden;
}

.mega-menu-header {
  padding: 16px 20px;
  border-bottom: 1px solid #f0f0f0;
}

.mega-menu-header h3 {
  font-size: 16px;
  font-weight: 700;
  color: #1a1a2e;
  margin: 0;
}

.mega-menu-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  padding: 12px;
  gap: 4px;
}

.mega-menu-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px 16px;
  background: transparent;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  text-align: left;
  transition: background 0.2s;
}

.mega-menu-item:hover {
  background: #f0fdf4;
}

.mega-menu-item .category-emoji {
  font-size: 22px;
}

.mega-menu-item span:last-child {
  font-size: 14px;
  font-weight: 500;
  color: #374151;
}

.mega-menu-all {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6px;
  padding: 14px;
  background: #f9fafb;
  border-top: 1px solid #f0f0f0;
  color: #22c55e;
  font-size: 14px;
  font-weight: 600;
  text-decoration: none;
  transition: background 0.2s;
}

.mega-menu-all:hover {
  background: #f0fdf4;
}

/* Search Input Container */
.search-input-container {
  flex: 1;
  display: flex;
}

.search-input {
  flex: 1;
  padding: 12px 16px;
  border: none;
  font-size: 15px;
  outline: none;
}

.search-input::placeholder {
  color: #9ca3af;
}

.search-submit-btn {
  padding: 0 20px;
  background: #febd69;
  border: none;
  cursor: pointer;
  transition: background 0.2s;
}

.search-submit-btn:hover {
  background: #f3a847;
}

.search-submit-btn svg {
  font-size: 20px;
  color: #1a1a2e;
}

/* Search Suggestions */
.search-suggestions {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: white;
  border-radius: 0 0 8px 8px;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
  max-height: 400px;
  overflow-y: auto;
  z-index: 100;
}

.suggestions-section {
  padding: 12px 0;
  border-bottom: 1px solid #f0f0f0;
}

.suggestions-section:last-child {
  border-bottom: none;
}

.suggestions-section h5 {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 8px 16px;
  font-size: 12px;
  font-weight: 600;
  color: #6b7280;
  text-transform: uppercase;
  margin: 0;
}

.suggestion-item {
  display: flex;
  align-items: center;
  gap: 12px;
  width: 100%;
  padding: 10px 16px;
  background: transparent;
  border: none;
  font-size: 14px;
  color: #374151;
  cursor: pointer;
  text-align: left;
  transition: background 0.2s;
}

.suggestion-item:hover {
  background: #f9fafb;
}

.suggestion-icon {
  color: #9ca3af;
  font-size: 14px;
}

/* ============= RIGHT SECTION ============= */
.navbar-right {
  display: flex;
  align-items: center;
  gap: 8px;
  flex-shrink: 0;
}

/* Account Button */
.account-btn {
  display: flex;
  align-items: center;
  background: transparent;
  border: 1px solid transparent;
  padding: 8px 12px;
  border-radius: 4px;
  cursor: pointer;
  text-decoration: none;
  transition: all 0.2s;
}

.account-btn:hover {
  border-color: white;
}

.account-btn.guest {
  color: white;
}

.account-text {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  text-align: left;
}

.account-greeting {
  font-size: 11px;
  color: rgba(255, 255, 255, 0.8);
}

.account-title {
  display: flex;
  align-items: center;
  gap: 4px;
  font-size: 13px;
  font-weight: 700;
  color: white;
}

.account-title svg {
  font-size: 12px;
}

/* Account Dropdown */
.user-menu-container {
  position: relative;
}

.account-dropdown {
  position: absolute;
  top: 100%;
  right: 0;
  width: 420px;
  background: white;
  border-radius: 8px;
  box-shadow: 0 15px 50px rgba(0, 0, 0, 0.2);
  margin-top: 8px;
  z-index: 100;
  overflow: hidden;
}

.dropdown-header {
  display: flex;
  align-items: center;
  gap: 14px;
  padding: 20px;
  background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
}

.user-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: linear-gradient(135deg, #22c55e, #16a34a);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  font-weight: 700;
}

.user-avatar.large {
  width: 50px;
  height: 50px;
  font-size: 20px;
}

.user-info {
  display: flex;
  flex-direction: column;
}

.user-info .user-name {
  font-size: 16px;
  font-weight: 700;
  color: #1a1a2e;
}

.user-role-badge {
  display: inline-block;
  padding: 3px 10px;
  border-radius: 12px;
  font-size: 11px;
  font-weight: 600;
  text-transform: uppercase;
  margin-top: 4px;
  width: fit-content;
}

.user-role-badge.admin {
  background: #fef2f2;
  color: #dc2626;
}
.user-role-badge.manager {
  background: #fffbeb;
  color: #d97706;
}
.user-role-badge.farmer {
  background: #f0fdf4;
  color: #16a34a;
}
.user-role-badge.customer {
  background: #eff6ff;
  color: #2563eb;
}

.dropdown-columns {
  display: grid;
  grid-template-columns: 1fr 1fr;
  padding: 16px;
  gap: 16px;
}

.dropdown-column h4 {
  font-size: 13px;
  font-weight: 700;
  color: #6b7280;
  text-transform: uppercase;
  margin: 0 0 12px;
  padding-bottom: 8px;
  border-bottom: 1px solid #f0f0f0;
}

.dropdown-column a {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 10px 12px;
  color: #374151;
  text-decoration: none;
  font-size: 14px;
  border-radius: 6px;
  transition: all 0.2s;
}

.dropdown-column a:hover {
  background: #f0fdf4;
  color: #16a34a;
}

.dropdown-column a svg {
  font-size: 16px;
  color: #6b7280;
}

.dropdown-column a:hover svg {
  color: #16a34a;
}

.dropdown-divider {
  height: 1px;
  background: #f0f0f0;
  margin: 0;
}

.dropdown-admin {
  padding: 12px 16px;
}

.dropdown-admin a {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 12px 16px;
  background: #fef2f2;
  border-radius: 8px;
  color: #dc2626;
  text-decoration: none;
  font-size: 14px;
  font-weight: 600;
  transition: background 0.2s;
}

.dropdown-admin a:hover {
  background: #fee2e2;
}

.dropdown-logout {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  width: 100%;
  padding: 14px;
  background: #f9fafb;
  border: none;
  font-size: 14px;
  font-weight: 600;
  color: #6b7280;
  cursor: pointer;
  transition: all 0.2s;
}

.dropdown-logout:hover {
  background: #fef2f2;
  color: #dc2626;
}

/* Orders Button */
.orders-btn {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 8px 12px;
  text-decoration: none;
  border: 1px solid transparent;
  border-radius: 4px;
  transition: all 0.2s;
}

.orders-btn:hover {
  border-color: white;
}

.orders-label {
  font-size: 11px;
  color: rgba(255, 255, 255, 0.8);
}

.orders-title {
  font-size: 13px;
  font-weight: 700;
  color: white;
}

/* Icon Buttons */
.navbar-icon-btn {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  background: transparent;
  border: 1px solid transparent;
  border-radius: 4px;
  color: white;
  cursor: pointer;
  transition: all 0.2s;
  text-decoration: none;
}

.navbar-icon-btn:hover {
  border-color: white;
}

.navbar-icon-btn svg {
  font-size: 22px;
}

.navbar-icon-btn .badge {
  position: absolute;
  top: 2px;
  right: 2px;
  min-width: 18px;
  height: 18px;
  padding: 0 5px;
  background: #ef4444;
  color: white;
  border-radius: 10px;
  font-size: 11px;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
}

.navbar-icon-btn .badge.wishlist {
  background: #ec4899;
}

/* Cart Button */
.cart-btn {
  display: flex;
  align-items: flex-end;
  gap: 4px;
  padding: 8px 12px;
  text-decoration: none;
  border: 1px solid transparent;
  border-radius: 4px;
  transition: all 0.2s;
}

.cart-btn:hover {
  border-color: white;
}

.cart-icon-wrapper {
  position: relative;
}

.cart-icon {
  font-size: 28px;
  color: white;
}

.cart-count {
  position: absolute;
  top: -4px;
  right: -4px;
  min-width: 20px;
  height: 20px;
  padding: 0 6px;
  background: #f59e0b;
  color: #1a1a2e;
  border-radius: 10px;
  font-size: 14px;
  font-weight: 800;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cart-text {
  font-size: 13px;
  font-weight: 700;
  color: white;
  margin-bottom: 2px;
}

/* Mobile Menu Button */
.mobile-menu-btn {
  display: none;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;
  background: transparent;
  border: 1px solid transparent;
  border-radius: 4px;
  color: white;
  cursor: pointer;
}

.mobile-menu-btn:hover {
  border-color: white;
}

.mobile-menu-btn svg {
  font-size: 24px;
}

/* ============= SECONDARY NAVBAR ============= */
.navbar-secondary {
  background: #232f3e;
}

.secondary-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 24px;
  height: 42px;
  display: flex;
  align-items: center;
  gap: 24px;
}

.all-categories-btn {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 8px 12px;
  background: transparent;
  border: 1px solid transparent;
  border-radius: 4px;
  color: white;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s;
}

.all-categories-btn:hover {
  border-color: white;
}

.all-categories-btn svg {
  font-size: 18px;
}

.secondary-links {
  display: flex;
  align-items: center;
  gap: 4px;
  flex: 1;
}

.secondary-link {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 8px 14px;
  color: rgba(255, 255, 255, 0.9);
  text-decoration: none;
  font-size: 13px;
  font-weight: 500;
  border-radius: 4px;
  transition: all 0.2s;
}

.secondary-link:hover {
  background: rgba(255, 255, 255, 0.1);
  color: white;
}

.secondary-link.highlight {
  color: #fcd34d;
}

.secondary-link.sell {
  background: #22c55e;
  color: white;
  font-weight: 600;
}

.secondary-link.sell:hover {
  background: #16a34a;
}

.delivery-promise {
  display: flex;
  align-items: center;
  gap: 6px;
  color: rgba(255, 255, 255, 0.8);
  font-size: 13px;
  margin-left: auto;
}

.delivery-promise svg {
  color: #4ade80;
}

/* ============= MOBILE MENU ============= */
.mobile-menu {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 85%;
  max-width: 360px;
  height: 100vh;
  background: white;
  box-shadow: 5px 0 30px rgba(0, 0, 0, 0.2);
  z-index: 2000;
  transform: translateX(-100%);
  transition: transform 0.3s ease;
  overflow-y: auto;
}

.mobile-menu.open {
  transform: translateX(0);
}

.mobile-search {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 16px;
  background: #f9fafb;
  border-bottom: 1px solid #e5e7eb;
}

.mobile-search svg {
  color: #6b7280;
  font-size: 20px;
}

.mobile-search input {
  flex: 1;
  padding: 10px;
  border: 1px solid #e5e7eb;
  border-radius: 8px;
  font-size: 15px;
  outline: none;
}

.mobile-search input:focus {
  border-color: #22c55e;
}

.mobile-location {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 14px 16px;
  background: #f0fdf4;
  color: #16a34a;
  font-size: 14px;
  font-weight: 500;
}

.mobile-nav-links {
  padding: 16px;
  border-bottom: 1px solid #e5e7eb;
}

.mobile-nav-link {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 14px 16px;
  color: #374151;
  text-decoration: none;
  font-size: 15px;
  font-weight: 500;
  border-radius: 8px;
  transition: background 0.2s;
}

.mobile-nav-link:hover {
  background: #f9fafb;
}

.mobile-nav-link.highlight {
  color: #f59e0b;
}

.mobile-nav-link svg {
  font-size: 20px;
}

/* Mobile Categories */
.mobile-categories {
  padding: 16px;
  border-bottom: 1px solid #e5e7eb;
}

.mobile-categories h4 {
  font-size: 14px;
  font-weight: 700;
  color: #6b7280;
  text-transform: uppercase;
  margin: 0 0 12px;
}

.mobile-category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 8px;
}

.mobile-category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6px;
  padding: 12px 8px;
  background: #f9fafb;
  border-radius: 8px;
  text-decoration: none;
  transition: background 0.2s;
}

.mobile-category-item:hover {
  background: #f0fdf4;
}

.mobile-category-item .category-emoji {
  font-size: 24px;
}

.mobile-category-item span:last-child {
  font-size: 11px;
  font-weight: 500;
  color: #374151;
  text-align: center;
}

/* Mobile Cart & Wishlist */
.mobile-cart-wishlist {
  padding: 8px 16px;
  border-bottom: 1px solid #e5e7eb;
}

.mobile-badge {
  margin-left: auto;
  min-width: 24px;
  height: 24px;
  padding: 0 8px;
  background: #ef4444;
  color: white;
  border-radius: 12px;
  font-size: 13px;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Mobile User Section */
.mobile-user-section {
  padding: 16px;
}

.mobile-user-info {
  display: flex;
  align-items: center;
  gap: 14px;
  padding: 16px;
  background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
  border-radius: 12px;
  margin-bottom: 16px;
}

.mobile-user-info .user-avatar {
  width: 48px;
  height: 48px;
  font-size: 20px;
}

.mobile-user-info .user-name {
  font-size: 16px;
  font-weight: 700;
  color: #1a1a2e;
  display: block;
}

.mobile-user-info .user-role {
  font-size: 12px;
  color: #16a34a;
  font-weight: 600;
  text-transform: uppercase;
}

.mobile-user-links {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.mobile-user-links a,
.mobile-user-links button {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 14px 16px;
  background: transparent;
  border: none;
  color: #374151;
  text-decoration: none;
  font-size: 15px;
  font-weight: 500;
  border-radius: 8px;
  cursor: pointer;
  transition: background 0.2s;
  width: 100%;
  text-align: left;
}

.mobile-user-links a:hover,
.mobile-user-links button:hover {
  background: #f9fafb;
}

.mobile-user-links button:last-child {
  color: #dc2626;
}

/* Mobile Auth */
.mobile-auth {
  padding: 16px;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.mobile-login {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 14px;
  background: linear-gradient(135deg, #22c55e, #16a34a);
  color: white;
  text-decoration: none;
  font-size: 16px;
  font-weight: 600;
  border-radius: 10px;
  transition: opacity 0.2s;
}

.mobile-login:hover {
  opacity: 0.9;
}

.mobile-register {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 14px;
  background: white;
  color: #374151;
  text-decoration: none;
  font-size: 15px;
  font-weight: 600;
  border: 2px solid #e5e7eb;
  border-radius: 10px;
  transition: all 0.2s;
}

.mobile-register:hover {
  border-color: #22c55e;
  color: #22c55e;
}

/* Mobile Overlay */
.mobile-overlay {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1999;
}

/* ============= RESPONSIVE STYLES ============= */
@media (max-width: 1200px) {
  .location-selector {
    display: none;
  }

  .orders-btn {
    display: none;
  }

  .navbar-search {
    max-width: 500px;
  }

  .dropdown-columns {
    grid-template-columns: 1fr;
  }

  .account-dropdown {
    width: 280px;
  }
}

@media (max-width: 992px) {
  .navbar-secondary {
    display: none;
  }

  .navbar-search {
    max-width: 400px;
  }

  .search-category-select {
    display: none;
  }

  .messages-btn {
    display: none;
  }
}

@media (max-width: 768px) {
  .navbar-container {
    height: 56px;
    padding: 0 16px;
  }

  .navbar-left {
    gap: 8px;
  }

  .navbar-logo {
    font-size: 20px;
  }

  .logo-icon {
    font-size: 24px;
  }

  .navbar-search {
    display: none;
  }

  .account-btn {
    display: none;
  }

  .navbar-icon-btn:not(.cart-btn):not(:last-of-type) {
    display: none;
  }

  .cart-btn {
    padding: 6px 8px;
  }

  .cart-text {
    display: none;
  }

  .mobile-menu-btn {
    display: flex;
  }

  .mobile-menu {
    display: block;
  }

  .mobile-overlay {
    display: block;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s;
  }

  .mobile-menu.open + .mobile-overlay,
  .mobile-overlay {
    opacity: 1;
    visibility: visible;
  }
}

@media (max-width: 480px) {
  .navbar-container {
    padding: 0 12px;
  }

  .logo-text {
    display: none;
  }

  .topbar-content {
    font-size: 11px;
    padding: 0 12px;
  }

  .mobile-category-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}
