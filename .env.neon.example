# =====================================================
# AgriLink - Neon Database Environment Configuration
# =====================================================
# Copy this file to .env and fill in your Neon credentials
# DO NOT commit .env file to version control!

# =====================================================
# NEON DATABASE CONFIGURATION
# =====================================================
# Get these values from your Neon Console (https://console.neon.tech)
# Navigate to your project > Connection Details

# Your Neon endpoint (e.g., ep-cool-darkness-123456.us-east-2.aws.neon.tech)
NEON_HOST=psql -h pg.neon.tech

# Your Neon database username (usually the project owner)
NEON_USERNAME=neondb_owner

# Your Neon database password (from Neon Console)
NEON_PASSWORD=npg_bVWzNYFB23tP

# =====================================================
# DATABASE URLs FOR EACH SERVICE
# =====================================================
# These use the NEON_HOST, NEON_USERNAME, NEON_PASSWORD above

# Auth Service Database
AUTH_DB_URL=jdbc:postgresql://${NEON_HOST}/agrilink_auth?sslmode=require

# User Service Database  
USER_DB_URL=jdbc:postgresql://${NEON_HOST}/agrilink_user?sslmode=require

# Farm Service Database
FARM_DB_URL=jdbc:postgresql://${NEON_HOST}/agrilink_farm?sslmode=require

# Marketplace Service Database
MARKETPLACE_DB_URL=jdbc:postgresql://${NEON_HOST}/agrilink_marketplace?sslmode=require

# Order Service Database
ORDER_DB_URL=jdbc:postgresql://${NEON_HOST}/agrilink_order?sslmode=require

# IoT Service Database
IOT_DB_URL=jdbc:postgresql://${NEON_HOST}/agrilink_iot?sslmode=require

# Notification Service Database
NOTIFICATION_DB_URL=jdbc:postgresql://${NEON_HOST}/agrilink_notification?sslmode=require

# =====================================================
# JWT CONFIGURATION
# =====================================================
JWT_SECRET=myVeryLongAndSecureSecretKeyForJWTTokenGenerationThatIsAtLeast256BitsLong
JWT_EXPIRATION=86400000

# =====================================================
# SPRING PROFILE
# =====================================================
SPRING_PROFILES_ACTIVE=neon
